%p#notice= notice
.form-group
  %p.form-control-static
    %strong Name:
    = @user.name
.form-group
  %p.form-control-static
    %strong Last name:
    = @user.last_name
.form-group
  %p.form-control-static
    %strong DNI:
    = @user.dni
.form-group
  %p.form-control-static
    %strong Birthdate:
    = @user.birthdate
.form-group
  %p.form-control-static
    %strong Gender:
    = @user.gender
%legend Pets
.form-group
  - @user.pets.each do |pet|
    %label Name
    %p.form-control-static
      = pet.name
%a.btn.btn-success{:href => "/users/#{@user.id}/edit"} Edit
|
%a.btn.btn-warning{:href => "/users/"} Back
