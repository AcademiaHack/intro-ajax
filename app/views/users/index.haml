.row
  .col-xs-12
    %p#notice= notice
.row
  .col-xs-10.col-xs-offset-1
    %h1.text-center Listing Users
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Last name
          %th Birthdate
          %th Gender
          %th{:colspan => "3"}
      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td= user.last_name
            %td= user.birthdate
            %td= user.gender
            %td
              %a.btn.btn-xs.btn-info{:href => "/users/#{user.id}"} Show
            %td
              %a.btn.btn-xs.btn-warning{:href => "/users/#{user.id}/edit"} Edit
            %td
              %a.btn.btn-xs.btn-danger{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => "/users/#{user.id}", :rel => "nofollow"} Destroy
.row
  .col-xs-12.col-md-6.col-md-offset-3
    %a.btn.btn-block.btn-success{:href => "/users/new"} New User
