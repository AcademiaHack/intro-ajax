.row
  .col-xs-12
    .alert.alert-success#notice= notice
.row
  .col-xs-10.col-xs-offset-1
    %h1.text-center Listing Users
    .row
      .col-xs-5.col-xs-offset-7.text-right
        = form_tag(search_users_path, method: :get, class: 'form-inline') do
          .form-group
            = text_field_tag(:search, nil, placeholder: 'Enter DNI', class: 'form-control')
          = submit_tag("Search", class: 'btn btn-default')
    .row
      .col-xs-12
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Last name
              %th DNI
              %th Birthdate
              %th Gender
              %th{:colspan => "3"}
          %tbody
            - @users.each do |user|
              %tr
                %td= user.name
                %td= user.last_name
                %td= user.dni
                %td= user.birthdate
                %td= user.gender
                %td
                  %a.btn.btn-xs.btn-info{:href => "/users/#{user.id}"} Show
                %td
                  %a.btn.btn-xs.btn-warning{:href => "/users/#{user.id}/edit"} Edit
                %td
                  %a.btn.btn-xs.btn-danger{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => "/users/#{user.id}", :rel => "nofollow"} Destroy
.row
  .col-xs-12.col-md-6.col-md-offset-3
    %a.btn.btn-block.btn-success{:href => "/users/new"} New User
